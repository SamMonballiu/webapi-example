<Window x:Class="BooksWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20">
            <ComboBox x:Name="cbAuthors"/>
            <StackPanel Orientation="Horizontal" Margin="0 12 0 0">
                <Label>Name:</Label>
                <TextBox MinWidth="200"  x:Name="txtNewAuthor"/>
                <Button Width="80" x:Name="btnAddAuthor" Click="btnAddAuthor_Click">Create</Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20">
            <ComboBox x:Name="cbBooks"/>
            <StackPanel Orientation="Horizontal" Margin="0 12 0 0">
                <Label>Name:</Label>
                <TextBox MinWidth="200"  x:Name="txtNewBook"/>
                <Button Width="80" x:Name="btnNewBook" Click="btnNewBook_Click">Link</Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
