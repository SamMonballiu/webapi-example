@model BooksMvc.Models.BooksViewModel

@{
    ViewBag.Title = "Books";
    var bk = new DataLayer.Models.Book();
}

<h2>Books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => bk.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => bk.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => bk.PublicationYear)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink(item.Author.Name, "Index", "Books", new { id = item.AuthorId }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublicationYear)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-12">
        @if (Model.SelectedAuthor != null)
        {
            @Html.Partial("_AuthorDetails", Model.SelectedAuthor)
        }
    </div>
</div>
